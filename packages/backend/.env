# Environment Configuration for Development
# Copy this file to .env and update with your actual values

# ===========================================
# GENERAL CONFIGURATION
# ===========================================
NODE_ENV=development
APP_NAME=japavel-backend
APP_VERSION=0.0.1

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Using SQLite for development (no database server required)
# For production, use PostgreSQL: postgresql://user:password@host:port/database
DATABASE_URL=file:./dev.db

# ===========================================
# REDIS CONFIGURATION
# ===========================================
# Disabled for development - uses in-memory session storage
REDIS_ENABLED=true
REDIS_URL=redis://localhost:6379

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Generate secure keys for production!
ENCRYPTION_KEY="KEY"
ENCRYPTION_SALT="KEY"
JWT_SECRET="KEY"

# Session settings
SESSION_EXPIRATION=86400
MAX_SESSIONS_PER_USER=5

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=3000
HOST=0.0.0.0
TRUST_PROXY=true

# ===========================================
# CORS CONFIGURATION
# ===========================================
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
CORS_CREDENTIALS=true

# ===========================================
# RATE LIMITING CONFIGURATION
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_ATTEMPTS=5
RATE_LIMIT_GENERAL_WINDOW_MS=60000
RATE_LIMIT_GENERAL_MAX_REQUESTS=100
RATE_LIMIT_LOCKOUT_DURATION=1800000

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=debug
LOG_DIR=./logs
LOG_CONSOLE=true
LOG_FILE=false
LOG_MAX_FILES=10
LOG_MAX_SIZE=50m

# ===========================================
# DATABASE POOL CONFIGURATION
# ===========================================
DATABASE_POOL_MAX=10
DATABASE_POOL_MIN=2
DATABASE_CONNECTION_TIMEOUT=10000

# ===========================================
# MCP SERVER CONFIGURATION
# ===========================================
MCP_ENABLED=false
MCP_PORT=3001
MCP_ALLOWED_ORIGINS=*
