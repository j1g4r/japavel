{
  "name": "japavel-vscode",
  "displayName": "Japavel DSL Support",
  "description": "Language support for Japavel Framework DSL",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:japavel"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [{
      "id": "japavel",
      "aliases": ["Japavel", "japavel"],
      "extensions": [".japavel"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "japavel",
      "scopeName": "source.japavel",
      "path": "./syntaxes/japavel.tmLanguage.json"
    }]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "ignore": "echo 'ignore'"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "typescript": "^5.3.0",
    "@vscode/vsce": "^2.15.0"
  }
}
